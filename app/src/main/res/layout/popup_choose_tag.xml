<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="添加话题"
        android:textColor="#CC000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/topic_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        android:text="确定"
        android:textColor="#7195FA"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/add_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/ic_research"
        android:textColor="#7195FA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="热门话题"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_tag" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <TextView
            android:id="@+id/topic_physics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_round_rect"
            android:paddingBottom="10dp"
            android:paddingEnd="23dp"
            android:paddingStart="23dp"
            android:paddingTop="10dp"
            android:text="大物"
            android:textColor="#7195FA" />

        <TextView
            android:id="@+id/topic_english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_round_rect"
            android:paddingBottom="10dp"
            android:paddingEnd="23dp"
            android:paddingStart="23dp"
            android:paddingTop="10dp"
            android:text="英语"
            android:textColor="#7195FA" />

        <TextView
            android:id="@+id/topic_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_round_rect"
            android:paddingBottom="10dp"
            android:paddingEnd="23dp"
            android:paddingStart="23dp"
            android:paddingTop="10dp"
            android:text="线代"
            android:textColor="#7195FA" />

        <TextView
            android:id="@+id/topic_math"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_round_rect"
            android:paddingBottom="10dp"
            android:paddingEnd="23dp"
            android:paddingStart="23dp"
            android:paddingTop="10dp"
            android:text="高数"
            android:textColor="#7195FA" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/topic_geometry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_round_rect"
            android:paddingBottom="10dp"
            android:paddingEnd="23dp"
            android:paddingStart="23dp"
            android:paddingTop="10dp"
            android:text="几何"
            android:textColor="#7195FA" />

        <TextView
            android:id="@+id/topic_politics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_round_rect"
            android:paddingBottom="10dp"
            android:paddingEnd="23dp"
            android:paddingStart="23dp"
            android:paddingTop="10dp"
            android:text="思修"
            android:textColor="#7195FA" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:paddingBottom="10dp"
            android:paddingEnd="23dp"
            android:paddingStart="23dp"
            android:paddingTop="10dp"
            android:text="高数"
            android:textColor="#ffffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:paddingBottom="10dp"
            android:paddingEnd="23dp"
            android:paddingStart="23dp"
            android:paddingTop="10dp"
            android:text="高数"
            android:textColor="#ffffffff" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1"
        />

</android.support.constraint.ConstraintLayout>